<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>@ViewData["Title"] - Bakdelar</title>

    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Barlow+Condensed&family=Coustard&display=swap" rel="stylesheet">
</head>

<body class="d-flex flex-column min-vh-100">
    <header class="section-header py-4" id="banner-image">
        <div class="container ">
            <div class="d-flex justify-content-center">
                <form method="post">
                    <input type="text" />
                </form>
            </div>
        </div>
    </header>
    <nav class="navbar navbar-default navbar-expand navbar-light shadow-sm sticky-top">
        
        <div class="container-fluid">
            <div class="row" style="width: 100%">

                <div class="col">
                    @*navbar-toggler*@
                    <button class="btn navbar-dark btn-secondary" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    @*<ul class="nav navbar-nav">
            <li class="nav-item">
                <a class="navbar-brand" href="#">
                    <img src="/images/logo.png" width="50" height="50" alt="">
                </a>
            </li>
        </ul>*@
                </div>
                <div class="col-lg-9">
                    <ul class="navbar-collapse justify-content-center" id="navbarNavAltMarkup">
                        <li class="navbar-nav">
                            <a class="nav-item nav-link active navbar-text" href="/">Hem</a>
                        </li>
                        <li class="navbar-nav">
                            <a class="nav-item nav-link navbar-text" href="Categories">Kategorier</a>
                        </li>
                        <li class="navbar-nav">
                            <a class="nav-item nav-link navbar-text" href="Checkout">Kassa</a>
                        </li>
                    </ul>
                </div>
                <div class="col d-flex justify-content-end">
                    <ul class="navbar-nav ml-auto">
                        <li class="navbar">
                            <div class="btn-group dropleft">
                                <button class="btn btn-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="material-icons" id="dropdown_basket">
                                        shopping_basket
                                    </span>
                                </button>

                                <div class="dropdown-menu">
                                    <h6 class="dropdown-header">Varukorg</h6>
                                    <div class="dropdown-divider"></div>
                                    <partial name="_ShoppingBasket.cshtml" />
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="Checkout">Till kassan</a>
                                </div>
                            </div>

                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </nav>
    <div id="body" class="container-fluid">
        <div class="row">
            <div class="col">
                <div class="collapse" id="navbarToggleExternalContent">
                    <div class="bg-dark p-4">
                        <h4 class="text-white">Collapsed content</h4>
                        <span class="text-muted">Toggleable via the navbar brand.</span>
                    </div>
                </div>
            </div>
            <div class="col-lg-9 container justify-content-center align-items-center">
                <div class="row justify-content-center shadow-sm px-2 p-3 mb-5 bg-white rounded min-vh-100">

                    <main role="main">

                        @RenderBody()
                    </main>
                </div>
            </div>
            <div class="col"></div>
        </div>
    </div>

    <footer class="border-top footer justify-content-center align-items-lg-start bg-white">
        &copy; 2021 - Bakdelar.se - <a asp-area="" asp-page="/Privacy">Privacy</a>
    </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
