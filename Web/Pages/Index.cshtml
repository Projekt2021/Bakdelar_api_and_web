@page

@model IndexModel
@{
    ViewData["Title"] = "Välkommen";
}
@if (Model.Error)
{

}
else@*product.ProductImages.FirstOrDefault().ImageUrl*@
{
    <div class="d-flex flex-wrap justify-content-center">
        @foreach (var product in Model.Products) // lägger till kort med varor på hemskärmen
        {
            <div class="card mx-4 my-2" style="width: 14vw; ">
                <img class="card-img-top" src="@product.ProductImage.ImageUrl" alt="Product image" style="height: 10vw;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@product.ProductName</h5>
                    <p class="card-text">@product.ProductDescription</p>
                        <a href="~/Item/@product.Id" class="btn btn-primary mt-auto">Visa detaljer</a>
                    </div>
                </div>

        }
    </div>
}



